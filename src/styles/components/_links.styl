.l0:link, .l0:visited
  color: white;
  text-decoration: none;

.l1:link, .l1:visited
  color: white;
  position: relative;
  text-decoration: none;
  &:before
    width: 100%;
    height: 10px;
    content: '';
    background: blue;
    opacity: 0.3;
    position: absolute;
    transition: height, 0.2s;
    bottom: 0;

.l1:hover, .l1:visited
  color: white;
  position: relative;
  text-decoration: none;
  &:before
    width: 100%;
    height: 20px;
    content: '';
    background: blue;
    opacity: 0.3;
    position: absolute;
    transition: height, 0.2s;
    bottom: 3px;

